#!/usr/bin/env ruby
require "lifx-http"
require "rack/cors"
require "lifx-http/method_override"

app = Rack::Builder.new do
  use LIFXHTTP::MethodOverride
  use Rack::Cors do
    allow do
      origins '*'
      resource '*', headers: :any, methods: [:get, :post, :put, :delete, :options]
    end
  end

  run LIFXHTTP::API
end

Rack::Handler::WEBrick.run(app, Port: 56780)
